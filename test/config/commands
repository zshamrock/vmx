[logs]
command=cat logs/app.log

[app-logs]
command=tail -f -n 10 logs/app.log

[follow-logs]
workingdir=/opt/app1
command=tail -f -n 10 logs/app1.log
follow=true

[redeploy!]
command=./redeploy.sh

[disk-space]
command=df -h

[logs-extra1]
command=tail -f -n 10 logs/%s

[logs-extra2]
command=tail -f -n %s logs/app.log
